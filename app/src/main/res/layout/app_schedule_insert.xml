<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/class_table_bg" >

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            style="@style/R_tittle_tv"
            android:layout_marginTop="0dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:text="修改课程" >
        </TextView>

        <Spinner
            android:id="@+id/spinner_weekday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="50dip"
            android:layout_marginRight="50dip"
            android:background="@drawable/spinner_selector"
            android:focusable="true"
            android:focusableInTouchMode="true" >
        </Spinner>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dip"
            android:saveEnabled="true"
            android:scrollbars="vertical" >

            <TableLayout
                android:id="@+id/schedule_tl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:shrinkColumns="1"
                android:stretchColumns="1" >

                <TableRow>

                    <TextView
                        style="@style/scheduleInsert_tv1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:text="1、2节" >
                    </TextView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <EditText
                            android:id="@+id/et_classname_1"
                            style="@style/scheduleInsert_et2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" >
                        </EditText>

                        <EditText
                            android:id="@+id/et_roomno_1"
                            style="@style/scheduleInsert_et3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" >
                        </EditText>
                    </LinearLayout>
                </TableRow>

                <TableRow>

                    <TextView
                        style="@style/scheduleInsert_tv1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="3、4节" >
                    </TextView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <EditText
                            android:id="@+id/et_classname_3"
                            style="@style/scheduleInsert_et2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" >
                        </EditText>

                        <EditText
                            android:id="@+id/et_roomno_3"
                            style="@style/scheduleInsert_et3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" >
                        </EditText>
                    </LinearLayout>
                </TableRow>

                <TableRow>

                    <TextView
                        style="@style/scheduleInsert_tv1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:text="5、6节" >
                    </TextView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <EditText
                            android:id="@+id/et_classname_5"
                            style="@style/scheduleInsert_et2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" >
                        </EditText>

                        <EditText
                            android:id="@+id/et_roomno_5"
                            style="@style/scheduleInsert_et3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" >
                        </EditText>
                    </LinearLayout>
                </TableRow>

                <TableRow>

                    <TextView
                        style="@style/scheduleInsert_tv1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="7、8节" >
                    </TextView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <EditText
                            android:id="@+id/et_classname_7"
                            style="@style/scheduleInsert_et2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" >
                        </EditText>

                        <EditText
                            android:id="@+id/et_roomno_7"
                            style="@style/scheduleInsert_et3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" >
                        </EditText>
                    </LinearLayout>
                </TableRow>

                <TableRow>

                    <TextView
                        style="@style/scheduleInsert_tv1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="选修" >
                    </TextView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <EditText
                            android:id="@+id/et_classname_0"
                            style="@style/scheduleInsert_et2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" >
                        </EditText>

                        <EditText
                            android:id="@+id/et_roomno_0"
                            style="@style/scheduleInsert_et3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" >
                        </EditText>
                    </LinearLayout>
                </TableRow>
            </TableLayout>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/layout"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/btn_insert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_weight="2"
            android:background="@android:color/transparent"
            android:src="@drawable/selector_btn_sumit" >
        </ImageButton>

        <ImageButton
            android:id="@+id/btn_cancle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_weight="2"
            android:background="@android:color/transparent"
            android:src="@drawable/selector_btn_back" >
        </ImageButton>
    </LinearLayout>

</RelativeLayout>