<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00ffffff"
    android:scrollbars="vertical" >

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="400dip"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:shrinkColumns="1"
        android:stretchColumns="1" >

        <TextView
            android:id="@+id/tv_weekday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0.5dp"
            android:gravity="center_horizontal"
            android:paddingTop="15dp"
            android:text="星期五"
            android:textColor="@color/title"
            android:textSize="@dimen/class_text_size"
            android:textStyle="bold" />

        <TableRow>

            <TextView
                style="@style/show_tv1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:text="1、2节" >
            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_classname_1"
                    style="@style/show_tv2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="计算机" >
                </TextView>

                <TextView
                    android:id="@+id/tv_roomno_1"
                    style="@style/show_tv3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="教四 403" >
                </TextView>
            </LinearLayout>
        </TableRow>

        <TableRow>

            <TextView
                style="@style/show_tv1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="3、4节" >
            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_classname_3"
                    style="@style/show_tv2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="大英" >
                </TextView>

                <TextView
                    android:id="@+id/tv_roomno_3"
                    style="@style/show_tv3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="教二 103" >
                </TextView>
            </LinearLayout>
        </TableRow>

        <TableRow>

            <TextView
                style="@style/show_tv1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:text="5、6节" >
            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_classname_5"
                    style="@style/show_tv2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="计算机组成原理" >
                </TextView>

                <TextView
                    android:id="@+id/tv_roomno_5"
                    style="@style/show_tv3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="教五 401" >
                </TextView>
            </LinearLayout>
        </TableRow>

        <TableRow>

            <TextView
                style="@style/show_tv1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="7、8节" >
            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_classname_7"
                    style="@style/show_tv2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="English" >
                </TextView>

                <TextView
                    android:id="@+id/tv_roomno_7"
                    style="@style/show_tv3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="教一 212" >
                </TextView>
            </LinearLayout>
        </TableRow>

        <TableRow>

            <TextView
                style="@style/show_tv1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="选修" >
            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_classname_0"
                    style="@style/show_tv2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="大学生心理健康教育" >
                </TextView>

                <TextView
                    android:id="@+id/tv_roomno_0"
                    style="@style/show_tv3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="教四 403" >
                </TextView>
            </LinearLayout>
        </TableRow>
    </TableLayout>

</ScrollView>